<!-- app/views/sessions/new.html.erb -->
<h1>Log In</h1>

<%= form_with url:log_in_path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Log In" %>
  <%= link_to "Sign Up", sign_up_path, class: "btn btn-primary" %>
<% end %>